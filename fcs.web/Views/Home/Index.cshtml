<div id="slider" class="container content-section text-center"></div>

<header id="myCarousel" class="carousel slide">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        @{
            int i = 0;
            foreach (var item in Model)
            {
                <li data-target="#myCarousel" data-slide-to="@i" @(item.CategoriaID == id ? "class=active" : "")></li>
                i++;
            }
        }
    </ol>
    <!-- Wrapper for Slides -->
    <div class="carousel-inner">
        @foreach (var item in Model)
        {
            <div class="item @(item.CategoriaID == id ? "active" : "")">
                <!-- Set the first background image using inline CSS below. -->
                @*<div class="fill" style="background-image:url('@item.ImmagineHome');"></div>
                <div class="carousel-caption">
                    <h2>@item.Titolo</h2>
                </div>*@
                <div class="row" style="margin:0 100px 0 100px">
                    <div class="col-sm-6" >
                        <h3><a href="@Url.Action("ArticleList", new { categoryId = item.CategoriaID })">@item.Titolo</a></h3>
                        @item.Descrizione
                    </div>
                    <div class="col-sm-6" >
                        <img src="http://via.placeholder.com/1600x1000" class="img-responsive" style="display: block;margin: 0 auto;" />
                    </div>
                </div>
            </div>
        }
    </div>
    <!-- Controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="icon-prev"></span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="icon-next"></span>
    </a>
</header>

<section class="container" style="padding:60px 0 60px 0">
    <div class="row">
        @foreach (var item in ViewBag.Cats)
        {
            <div class="col-xs-6 col-sm-4 col-md-3" style="margin-bottom:20px;height:250px">
                <img src="http://via.placeholder.com/350x220" class="img-responsive"/>
                <a href="@Url.Action("ArticleList", new { categoryId = item.CategoriaID })" ><h5>@item.Titolo</h5></a>
            </div>
        }
    </div>
</section>

